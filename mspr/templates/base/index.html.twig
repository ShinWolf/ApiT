{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Accueil{% endblock %}

{% block body %}
    <h2 class="text-center text-success"> Faites garder vos plantes ! </h2>
    <main class="container mt-3">
    <div class="row">
      <div class="col-md-8">
        <div class="card">
          <img src="../../public/images/plante1.png" height="400" class="card-img-top" alt="Image de plante">
          <div class="card-body">
            <h5 class="card-title">Nom de la plante</h5>
            <p class="card-text">Description de la plante.</p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <i class="far fa-thumbs-up mr-2"></i>200 likes
            </li>
            <li class="list-group-item">
              <i class="far fa-comment mr-2"></i>50 commentaires
            </li>
          </ul>
          <div class="card-footer">
            <form>
              <div class="form-group">
                <textarea class="form-control" rows="3" placeholder="Ajouter un commentaire"></textarea>
              </div>
              <button type="submit" class="btn btn-success">Poster</button>
            </form>
          </div>
        </div>
        <div class="card my-3">
                  <img src="../public/images/image2.jpeg" class="w-300" alt="Image de plante">
          <div class="card-body">
            <h5 class="card-title">Nom de la plante 2</h5>
            <p class="card-text">Description de la plante.</p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <i class="far fa-thumbs-up mr-2"></i>150 likes
            </li>
            <li class="list-group-item">
              <i class="far fa-comment mr-2"></i>30 commentaires
            </li>
          </ul>
          <div class="card-footer">
            <form>
              <div class="form-group">
                <textarea class="form-control" rows="3" placeholder="Ajouter un commentaire"></textarea>
              </div>
              <button type="submit" class="btn btn-success">Poster</button>
            </form>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card mb-3">
          <h5 class="card-header">Messagerie</h5>
          <div class="card-body">
            <ul class="list-group">
              <li class="list-group-item">Utilisateur 1</li>
              <li class="list-group-item">Utilisateur 2</li>
              <li class="list-group-item">Utilisateur 3</li>
              <li class="list-group-item">Utilisateur 4</li>
              <li class="list-group-item">Utilisateur 5</li>
            </ul>
          </div>
        </div>
        <div class="card mb-3">
          <h5 class="card-header">Recherche</h5>
          <div class="card-body">
            <form>
              <div class="input-group">
                <input type="text" class="form-control" placeholder="Rechercher une plante">
                <div class="input-group-append">
                  <button class="btn btn-outline-success" type="button"><i class="fas fa-search"></i></button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>
{% endblock %}